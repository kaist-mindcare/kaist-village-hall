{
  "name": "@kaist-village-hall/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "bun build src/index.ts --outdir build --target bun",
    "build:image": "docker build -f ../../.docker/api.Dockerfile -t yuwol/kaist-village-hall-api --platform linux/amd64 ../..",
    "db": "docker compose -f ../../.docker/docker-compose.dev.yml",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev": "bun run --hot src/index.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.4.7",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "drizzle-kit": "^0.22.7",
    "typescript": "^5.5.2"
  }
}
